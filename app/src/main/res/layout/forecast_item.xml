<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/forecastweather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".view.forecast.ForecastWeatherActivity">

    <TextView
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Monday"
            android:textSize="20dp"
            android:textStyle="bold"/>

    <ImageView
            android:id="@+id/fcicon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_search"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/day"/>

    <TextView
            android:id="@+id/fctempmax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/day"
            app:layout_constraintLeft_toRightOf="@id/fcicon"
            android:layout_marginTop="12dp"
            android:paddingLeft="20dp"
            android:textSize="20dp"
            tools:text="45"/>

    <TextView
            android:id="@+id/celciusmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/day"
            app:layout_constraintLeft_toRightOf="@id/fctempmax"
            android:layout_marginTop="12dp"
            android:textSize="15dp"
            android:text="\u2103"/>
</android.support.constraint.ConstraintLayout>